.login_container.floatleft
  = form_for(resource, :as => resource_name, :url => password_path(resource_name), :html => { :method => :put }) do |f| 
    = devise_error_messages!
    = f.hidden_field :reset_password_token 
    .field_container
      = f.label :password, class: 'floatleft'
      = f.password_field :password, class: 'floatright'
    .field_container
      = f.label :password_confirmation,"Confirm Password", class: 'floatleft'
      = f.password_field :password_confirmation, class: 'floatright'
    .field_container_remember_me
      = f.submit "Change my password", class: 'sign_in_button floatright'

.sign_up_container
  = link_to 'Sign In', new_user_session_url, class: 'floatleft'
  = link_to 'Sign Up', new_user_registration_url, class: 'floatright'